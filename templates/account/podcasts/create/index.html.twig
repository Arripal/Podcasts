{% extends 'base.html.twig' %}

{% block title %}Hello Account/Podcasts/CreatePodcastController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
      <h1>Création du podcast ✅</h1>

   {{ form_start(form) }}
    {{ form_row(form.name) }}
   <div class="file-upload">
        {{ form_row(form.file) }}
        <span class="file-info">
            Formats autorisés : MP3, WAV, OGG, MP4
        </span>
    </div>
    {{ form_row(form.categories) }} 
    {{form_row(form.description)}}
    <button type='submit'>Enregistrer le podcast</button>
   {{ form_end(form) }}
</div>
{% endblock %}
