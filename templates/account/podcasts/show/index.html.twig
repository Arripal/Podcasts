{% extends 'base.html.twig' %}

{% block title %}Mes podcasts{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {% if user_podcasts %}
    <ul>
        {% for podcast in user_podcasts %}
        <li>
            {{podcast.name}} <button><a href="{{path('app_account_podcasts_delete',{'identifier':podcast.id})}}">Supprimer</a></button><button><a href="{{path('app_account_podcasts_update',{'identifier':podcast.id})}}">Modifier</a></button>
        </li>  
        {% endfor %}
    </ul>
    {% endif %}
</div>
{% endblock %}
